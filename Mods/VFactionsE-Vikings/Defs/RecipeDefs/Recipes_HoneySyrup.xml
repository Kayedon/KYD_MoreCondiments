<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<RecipeDef>
		<defName>KYD_HoneySyrup</defName>
		<label>make honey syrup</label>
		<description>Create honey syrup by cutting honey with water. While still not good for you, honey syrup is not nearly as bad as straight sugar.</description>
		<jobString>Making honey syrup.</jobString>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<workAmount>200</workAmount>
		<allowMixingIngredients>true</allowMixingIngredients>
		<recipeUsers>
			<li>VCE_CondimentPrepTable</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>VFEV_Honey</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>VFEV_Honey</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<KYD_HoneySyrup>10</KYD_HoneySyrup>
		</products>
		<researchPrerequisite>VCE_CondimentsResearch</researchPrerequisite>
	</RecipeDef>
</Defs>
